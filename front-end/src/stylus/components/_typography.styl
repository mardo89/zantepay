.text-uppercase
  text-transform uppercase

.text-left
  text-align left

.text-center
  text-align center

.text-right
  text-align right
  
.h2
  font-size 36px
  font-weight 500
  letter-spacing -1px
  @media screen and (max-width: 1400px)
    font-size 34px
  @media screen and (max-width: 991px)
    font-size 30px
  @media screen and (max-width: 480px)
    font-size 28px
  span
    color $primary-color
    display block

.h4
  font-size 24px
  font-weight 500
  @media screen and (max-width: 1400px)
    font-size 22px
  @media screen and (max-width: 991px)
    font-size 20px
  @media screen and (max-width: 480px)
    font-size 19px
  span
    color $primary-color
    display block

.headline-mb 
  margin-bottom 30px

.headline-subline
  span
    display block
    color $primary-color
    font-size 14px

.headline
  padding-left 30px
  position relative
  & + p,
  & + .text,
  & + ul
    margin-top 60px
    @media screen and (max-width: 991px)
      margin-top 45px
  &:before
    content ''
    position absolute
    left 0
    top 7px
    bottom 4px
    width 1px
    background $primary-color
    box-shadow 0 0 10px rgba($primary-color, 0.7)

.text,
p
  line-height 1.9

.main-dashboard
  .text,
  p
    line-height 1.6

.white-content
  color #fff

.primary-color
  color $primary-color

.styl-list
  clearlist()
  line-height 1.9
  li
    padding-left 47px
    position relative
    margin-bottom 30px
    @media screen and (max-width: 991px)
      padding-left 37px
      margin-bottom 20px
    &:before
      content ''
      position absolute
      left -35px
      top -26px
      width 90px
      height 90px
      background url('../images/rect-list@2x.png') no-repeat center
      background-size contain
      @media screen and (max-width: 991px)
        width 60px
        height 60px
        left -21px
        top -16px

.send-link
  color #b6b6b6
  display inline-block
  padding-right 35px
  position relative
  &:before
    content ''
    width 24px
    height 21px
    position absolute
    right 0
    top 50%
    transform translateY(-50%)
    background url('../images/arrow@2x.png') no-repeat center
    background-size contain

.files-list
  clearlist()
  li
    position relative
    padding 5px 20px 5px 35px
    font-size 16px 
    color #9b9a9a
    margin-bottom 10px
  .file-name
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
  .file-ico
    position absolute
    left 0
    top 50%
    transform translateY(-50%)
  .cross-ico
    position absolute
    right 0
    top 50%
    transform translateY(-50%)
    font-size 20px
    color #9b9a9a
    font-family 'Arial', sans-serif
    text-decoration none !important
    &:hover
      color $primary-color

.text-regular
  font-size 16px
  
.text-sm
  font-size 14px
  
.text-xs
  font-size 12px

.triangle-list
  clearlist()
  li
    position relative
    padding 5px 0px 5px 50px
    font-size 16px 
    color #232323
    margin-bottom 23px
    &:before
      content ''
      position absolute
      left 5px
      top 50%
      width 20px
      height 20px
      background #797979
      transform rotate(45deg) translateY(-50%)
      transform-origin top center