.lp-form-input
  width 100%
  height 70px
  font-size 24px
  border 1px solid #ffffff
  border-radius 10px
  outline none
  background transparent
  color #fff
  padding 0 30px
  @media screen and (max-width: 1400px)
    font-size 20px
    height 55px
  @media screen and (max-width: 991px)
    font-size 16px
    height 50px
    padding 0 15px
  &::placeholder
    font-style italic
    font-weight 300
    color #fff

.lp-form-textarea
  @extend .lp-form-input
  height auto
  padding 20px 30px
  @media screen and (max-width: 991px)
    padding 10px 15px

.form-group
  margin-bottom 20px

.footer-lp
  .form-group
    margin-bottom 30px

.logon-group
  margin-bottom 15px

.logon-submit
  margin-top 50px

.logon-field
  height 50px
  width 100%
  border-radius 10px
  font-size 18px
  color $font-color
  border 1px solid #bfbfbf
  outline none
  text-align center
  &::placeholder
    font-style italic
    font-weight 300
    color $font-color

.radio-list
  clearlist()
  li
    margin-bottom 20px

.radio-button
  label
    position relative
    padding 5px 0 5px 45px
    cursor pointer
    display inline-block
    transition color .3s
    &:before
      content ''
      position absolute
      border 2px solid #c9c9c9
      width 22px
      height 22px
      top 50%
      left 5px
      transform translateY(-50%) rotate(45deg)
    &:after
      content ''
      position absolute
      width 10px
      height 10px
      background $primary-color
      top 50%
      left 11px
      transform translateY(-50%) rotate(45deg)
      transition opacity .3s
      opacity 0
  input[type="radio"]
    display none
    &:checked
      & + label
        color $primary-color
        &:after
          opacity 1

.field-label
  display inline-block
  margin-bottom 10px

.input-field
  height 50px
  width 100%
  border-radius 10px
  font-size 16px
  border 1px solid #bfbfbf
  box-shadow 0 2px 8px rgba(#000, .2) inset
  padding 0 15px
  transition all .2s
  background #fff
  outline none
  &[readonly]
    cursor default
    color #9b9a9a
  &::placeholder
    color #9b9a9a
  &:focus
    border-color #333

.textarea-field
  @extend .input-field
  height auto
  padding 10px 15px

.sub-field-label
  display inline-block
  color $primary-color
  margin-top 6px
  font-size 14px

.field-btn
  // margin-top 5px
  @media screen and (max-width: 767px)
    margin-top 20px

.field-or
  @media screen and (max-width: 575px)
    margin 10px 0
    font-weight 700

.date-picker-wrap
  position relative
  &:before
    content ''
    position absolute
    left 17px
    top 50%
    transform translateY(-50%)
    width 25px
    height 24px
    background url('../images/calendar_icon@2x.png') no-repeat center;
    background-size contain

.date-picker-inp
  background transparent
  position relative
  z-index 10
  padding-left 60px

.drag-drop-area
  background #f5f5f5
  border 1px dashed #bfbfbf
  border-radius 10px
  padding 30px 25px 35px
  margin 8px 0
  &.dragable
    border-color $primary-color
    .drag-drop-container
      opacity .2

.drag-drop-container
  max-width 275px
  margin auto
  text-align center
  transition opacity .2s
  input[type="file"]
    display none

.drag-drop-text
  color #9b9a9a
  font-size 12px
  line-height 1.8
  margin 10px 0

.checkbox
  label
    display inline-block
    cursor pointer
    position relative
    padding 7px 0 7px 40px
    &:before
      content ''
      position absolute
      left 0
      top 50%
      transform translateY(-50%)
      width 27px
      border-radius 5px
      height 27px
      border 1px solid #bfbfbf
      box-shadow 0 2px 8px rgba(#000, .2) inset
    &:after
      content ''
      position absolute
      top 50%
      left 10px
      width 8px
      height 16px
      margin-top -2px
      border-bottom 2px solid $primary-color
      border-right 2px solid $primary-color
      transform translateY(-50%) rotate(45deg) scale(0)
      opacity 0
      transition all .3s
  input[type="checkbox"]
    display none
    &:checked
      & + label:after
        transform translateY(-50%) rotate(45deg) scale(1)
        opacity 1