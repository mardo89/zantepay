.logon-modal
  max-width 390px
  width 100%
  background #fff
  margin 20px auto
  padding 0 !important
  border-radius 10px
  overflow visible !important
  position relative
  .h4
    text-align center
    margin-bottom 35px
  &--450
    max-width 450px
  .mfp-close
    left 100%
    right auto
    background #fff
    margin-left 15px
    top 15px
    width 40px
    height 40px
    line-height 40px
    border-radius 6px
    font-size 40px
    color #bfbfbf
    opacity 1
    @media screen and (max-width: 575px)
      left auto
      right 10px
      top 10px
      margin-left 0

.logon-modal-container
  padding 35px 25px
  text-align center

.logon-link
  display inline-block
  margin-top 35px
  text-decoration underline
  color $font-color

.logon-modal-text
  p
    padding 0 10px
    line-height 1.4
    margin-bottom 40px

.logon-modal-lg
  max-width 750px
  form
    max-width 390px
    margin auto

.deposit-modal-row
  .col-sm-5
    &:first-of-type
      padding-right 0
    &:last-of-type
      padding-left 0
    @media screen and (max-width: 400px)
      padding 0
    label
      @media screen and (max-width: 400px)
        font-size 15px
        white-space nowrap