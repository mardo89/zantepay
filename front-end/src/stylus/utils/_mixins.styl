clearfix()
  &:before,
  &:after
    content " "
    display table

  &:after
    clear both


text-overflow()
  overflow hidden
  white-space nowrap
  text-overflow ellipsis


noselection()
  user-select none
  -webkit-touch-callout none

  &:hover
    cursor default

clearlist()
  margin 0
  padding 0
  list-style none
  
clearmargin()
  margin-top 0
  margin-bottom 0

