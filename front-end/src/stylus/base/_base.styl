html, body
  min-height 100%
  height 100%


body 
  font-family 'Exo 2', sans-serif
  font-weight 500
  font-size 18px
  color $font-color
  -webkit-font-smoothing antialiased
  min-width 320px
  @media screen and (max-width: 1400px)
    font-size 17px
  @media screen and (max-width: 991px)
    font-size 16px

*
  box-sizing border-box

img
  max-width 100%
  vertical-align middle

p
  margin-top 0
  margin-bottom 20px

a
  color $primary-color
  text-decoration none
  &:hover
    color $primary-color
    text-decoration underline

h1, h2, h3, h4 
  margin 0
  padding 0

hr
  border-bottom 1px solid #cfcfcf
  border-top 0
  margin 25px 0