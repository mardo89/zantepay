.header
  background $bg-color-dark
  position relative
  z-index 400

.header-lp
  position relative
  z-index 400
  padding-top 88px
  @media screen and (max-width: 991px)
    padding-top 0
  // &:before
  //   content ''
  //   position absolute
  //   left 0
  //   right 0
  //   bottom 0
  //   top 0
  //   background url('../images/squares-1-1.png') no-repeat center bottom;
  //   animation glowing1 1.5s ease-in-out infinite alternate
  //   transform tranlateZ(0)
  & > div
    position relative
    z-index 10
  .masthead
    position fixed
    z-index 400
    top 0
    left 0
    width 100%
    background #000
    // box-shadow 0 3px 10px rgba($primary-color, .2)
    @media screen and (max-width: 991px)
      position static

.header-transparent
  .masthead
    background transparent
    position absolute
    left 0
    top 0
    width 100%
    z-index 400
.masthead
  padding 18px 0
  background #000
  .container
    @media (min-width 1310px)
      width 1280px
  .logo
    display inline-block
    img
      max-width 218px
      vertical-align bottom
.masthead__row
  display flex
  justify-content space-between
  @media screen and (max-width: 991px)
    display block
    clearfix()

.masthead__left
  display flex
  align-items center
  @media screen and (max-width: 991px)
    display block
    float left
    padding 7px 0

.masthead__menu
  display flex
  flex 1
  align-items center
  justify-content space-between
  @media (min-width: 992px)
    display flex !important
  @media (max-width: 991px)
    display none
    float left
    margin-top 10px
    width 100%
.navigation
  margin-left 10px
  @media screen and (max-width: 991px)
    margin-left 0
  ul
    clearfix()
    clearlist()
  & > ul
    & > li
      float left
      padding 5px 0
      position relative
      @media screen and (max-width: 991px)
        float none
        padding 0
        border-bottom 1px solid $primary-color
      &:last-of-type
        @media screen and (max-width: 991px)
          border-bottom none
        a 
          border-right none
      & > a
        color #fff
        display inline-block
        border-right 1px solid $primary-color
        padding 0 18px 
        vertical-align top
        line-height 20px
        font-size 15px
        // transition color .2s
        transform translateZ(0)
        @media screen and (max-width: 1310px)
          // font-size 15px
          padding 0 10px
        @media screen and (max-width: 1199px)
          font-size 12px
          padding 0 7px
        @media screen and (max-width: 991px)
          border-right none
          padding 10px 5px
          font-size 16px
      &.current-menu-item
        & > a
          color $primary-color
      a:hover
        color $primary-color
        text-decoration none
      &:hover > ul
        opacity 1
        visibility visible
      &.m-dropdown
        & > a
          position relative
          display block
          &:before
            content "\f107"
            font normal normal normal 14px/1 FontAwesome
            font-size 18px
            color $primary-color
            position absolute
            right 10px
            top 50%
            transform translateY(-50%)
            display none
            @media (max-width: 991px)
              display block
          &.is-active
            &:before
              transform translateY(-50%) rotate(180deg)
    ul
      position absolute
      left 0
      top 100%
      min-width 100%
      background #000
      padding 10px 0
      opacity 0
      visibility hidden
      // transition all .3s
      @media screen and (max-width: 991px)
        position static
        display none
        padding 0
        opacity 1
        margin-bottom -1px
        visibility visible
        border-top 1px solid $primary-color
      li
        @media screen and (max-width: 991px)
          border-bottom 1px solid $primary-color
      a
        color #fff
        white-space nowrap
        display inline-block
        padding 5px 20px 
        vertical-align top
        line-height 20px
        font-size 16px
        // transition color .2s
        @media screen and (max-width: 1199px)
          font-size 14px
        @media screen and (max-width: 991px)
          padding 10px 25px
          display block

.masthead__right
  @media screen and (max-width: 991px)
    margin-top 30px

.header__content
  margin-top 90px
  text-align center
  .center-logo
    margin-bottom 30px
  .h4
    margin 50px 0 20px
  // .h2
  //   max-width 900px
  //   margin auto

.h-banner
  position fixed !important
  left 0
  top 74px
  z-index 300 !important
  width 100%
  font-weight 600
  background $primary-color
  color #fff
  font-size 15px
  padding 10px 0
  opacity 0
  visibility hidden
  .container
    @media (min-width 1310px)
      width 1280px
  // transition all .3s
  &.is-active
    opacity 1
    visibility visible
    @media screen and (max-width 991px)
      position static !important
  .container
    position relative
    @media screen and (max-width 767px)
      padding-right 45px
      font-size 13px
  a
    color #fff
    text-decoration underline
  .row
    align-items center
  .social-list 
    vertical-align bottom
    li
      margin 4px
    a
      width 40px
      height 40px
      border 2px solid
      line-height 35px
      font-size 20px
      @media (max-width 1310px)
        width 35px
        height 35px
        line-height 30px
        font-size 18px
      @media (max-width 1199px)
        width 32px
        height 32px
        line-height 27px
        font-size 17px
      @media (max-width 480px)
        width 30px
        height 30px
        line-height 25px
        font-size 15px
      &:hover
        color #fff
        background rgba(#fff, .2)
      .fa
        line-height inherit
  .col-lg-9
    @media screen and (max-width 1199px)
      padding-left 0
    @media screen and (max-width 767px)
      padding-left 15px
  .col-lg
    padding-top 10px
    padding-bottom 10px
    padding-right 0
    @media screen and (max-width 991px)
      padding-top 0 
    @media screen and (max-width 767px)
      padding-top 10px
  .fa-close
    position absolute
    right 15px
    font-size 23px
    text-decoration none !important
    top 50%
    transform translateY(-50%)

.r-soc-banner
  position fixed
  right 10px
  z-index 300
  top 50%
  transform translateY(-50%)
  background #f92112
  color #fff
  border-radius 26px
  padding 10px 3px
  @media (max-width: 991px)
    display none
  ul
    list-style none
    margin 0
    padding 0
    a
      color inherit
      display inline-block
      width 30px
      height 30px
      text-align center
      font-size 25px
      margin 10px 8px