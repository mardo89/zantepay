.or-horizontal
  display block
  text-align center
  position relative
  margin 27px 0
  &:before
  &:after
    content ''
    position absolute
    height 1px
    background #232323
    top 50%
    transform translateY
    width calc(50% - 20px)
  &:before
    left -5px
  &:after
    right -5px

.col-vertical-line-right
  padding-left 60px
