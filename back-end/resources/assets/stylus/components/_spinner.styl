.spinner-container
  position relative

.spinner
  position absolute
  top 50%
  left 50%
  transform translateX(-50%) translateY(-50%)
  width 100px
  height 100px
  &--80
    width 80px
    height 80px
  &--50 
    width 50px
    height 50px
  &--20 
    width 20px
    height 20px
  &--30 
    width 30px
    height 30px
  & > div
    position absolute
    top 10%
    left 10%
    width 80%
    height 80%
    border-radius 50%
    border 6px solid $primary-color
    border-color $primary-color transparent transparent transparent
    transform translateZ(0)
    animation lds-ring 1.5s cubic-bezier(0.5,0,0.5,1) infinite
    &:nth-child(2)
      animation-delay .195s
    &:nth-child(3)
      animation-delay .39s
    &:nth-child(4)
      animation-delay .585s
  &--30,
  &--30 
    & > div
      border 3px solid 


@keyframes lds-ring
  0%
    transform rotate(0)
  100%
    transform rotate(360deg)