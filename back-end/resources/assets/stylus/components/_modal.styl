.logon-modal
  max-width 390px
  width 100%
  background #fff
  margin 20px auto
  padding 0 !important
  border-radius 10px
  overflow visible !important
  position relative
  .h4
    text-align center
    margin-bottom 35px
  &--400
    max-width 400px
  &--450
    max-width 450px
  &--560
    max-width 560px
  .mfp-close
    left 100%
    right auto
    background #fff
    margin-left 15px
    top 15px
    width 40px
    height 40px
    line-height 40px
    border-radius 6px
    font-size 40px
    color #bfbfbf
    opacity 1
    @media screen and (max-width: 575px)
      left auto
      right 10px
      top 10px
      margin-left 0

.logon-modal-container
  padding 35px 25px
  text-align center

.logon-link
  display inline-block
  margin-top 35px
  text-decoration underline
  color $font-color

.logon-modal-text
  p
    padding 0 10px
    line-height 1.4
    margin-bottom 40px

.logon-modal-lg
  max-width 660px
  form
    max-width 390px
    margin auto

.logon-modal-md
  @extend .logon-modal-lg
  max-width 550px

.deposit-modal-row
  .col-sm-5
    &:first-of-type
      padding-right 0
    &:last-of-type
      padding-left 0
    @media screen and (max-width: 400px)
      padding 0
    label
      @media screen and (max-width: 400px)
        font-size 15px
        white-space nowrap

.popover
  position fixed
  bottom 30px
  left 50%
  transform translateX(-50%)
  z-index 900
  width calc(100% - 30px)
  max-width 450px
  background #fff
  border-radius 5px
  box-shadow 0 0 10px rgba(#000, .4)
  padding 15px 70px 15px 50px
  font-size 16px
  .fa
    position absolute
    left 15px
    font-size 25px
    top 50%
    transform translateY(-50%)
    color #51d651

.popover__close
  position absolute
  right 20px
  top 50%
  transform translateY(-50%)
  font-size 16px
  color #999
  text-decoration none !important